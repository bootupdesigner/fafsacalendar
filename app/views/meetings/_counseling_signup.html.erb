<div class="d-flex justify-content-center">
<%= form_with model: [ @meeting, @meeting.counselings.build ] do |form| %>

    <div class="form-group form-control-lg">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    </div>

  <div class="form-group form-control-lg">
  <%= form.radio_button :attending, "I'm attending" %>
    <%= form.label :attending, "Attending" %>
  </div>
  <%= form.hidden_field :user_id , :value => current_user.id %>
  <%= form.hidden_field :meeting_id , :value => @meeting.id %>

  <div class="actions">
  <%= form.submit %>
</div>
    <% end %>
    </div>