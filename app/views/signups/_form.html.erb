<div class="d-flex justify-content-center">
<%= form_with(model: signup) do |form| %>
  <% if signup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(signup.errors.count, "error") %> prohibited this signup from being saved:</h2>

      <ul>
        <% signup.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-control-lg">
    <%= form.label :full_name %><br>
    <%= form.text_field :full_name %>
  </div>

  <div class="form-group form-control-lg">
    <%= form.label :attending %><br>
    <%= form.check_box :attending %>
  </div>

  <div class="form-group form-control-lg">
    <%= form.label :user_id %><br>
    <%= form.text_field :user_id %>
  </div>

  <div class="form-group form-control-lg">
    <%= form.label :seminar_id %><br>
    <%= form.text_field :seminar_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>