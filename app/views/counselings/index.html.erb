<p id="notice"><%= notice %></p>

<h1>Counselings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Attending</th>
      <th>Reason</th>
      <th>User</th>
      <th>Meeting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counselings.each do |counseling| %>
      <tr>
        <td><%= counseling.name %></td>
        <td><%= counseling.attending %></td>
        <td><%= counseling.reason %></td>
        <td><%= counseling.user_id %></td>
        <td><%= counseling.meeting_id %></td>
        <td><%= link_to 'Show', counseling %></td>
        <td><%= link_to 'Edit', edit_counseling_path(counseling) %></td>
        <td><%= link_to 'Destroy', counseling, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

