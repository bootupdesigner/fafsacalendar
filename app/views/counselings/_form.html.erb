<div class="d-flex justify-content-center">
<%= form_with(model: counseling) do |form| %>
  <% if counseling.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(counseling.errors.count, "error") %> prohibited this counseling from being saved:</h2>

      <ul>
        <% counseling.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group form-control-lg">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <%= form.label :attending %>
