  </div>

  <div class="form-group form-control-lg">
    <%= form.label :reason %><br>
    <%= form.text_area :reason %>
  </div>
  
  <%= form.hidden_field :user_id , :value => current_user.id %>
  <%= form.hidden_field :meeting_id , :value => @meeting.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>